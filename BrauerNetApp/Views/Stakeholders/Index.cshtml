@model List<BrauerNetApp.Models.Stakeholder>

@{
    ViewData["Title"] = "Stakeholder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Stakeholders on BrauerNet</h2>
<hr />
<div class="row">
    @if (Model.Count > 0)
    {
        @foreach (var stakeholder in Model)
        {
            <div class="col-md-4 standard">
                <div class="panel standard stakeholders">
                    <div class="panel-heading">
                        <h3>@Html.DisplayFor(modelItem => stakeholder.Organization)</h3>
                        <h3>@Html.DisplayFor(modelItem => stakeholder.ContactName)</h3>
                        <h3>@Html.DisplayFor(modelItem => stakeholder.Notes)</h3>
                    </div>
                    <div class="panel-body">
                        <ul>
                            <li>@Html.ActionLink("Edit Stakeholder", "Edit", new { id = stakeholder.StakeholderId })</li>
                            <li>@Html.ActionLink("Delete Stakeholder", "Delete", new { id = stakeholder.StakeholderId })</li>
                            <li>@Html.ActionLink("Standard Details", "Details", new { id = stakeholder.StakeholderId })</li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    }
</div>


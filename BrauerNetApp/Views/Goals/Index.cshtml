@model List<BrauerNetApp.Models.Goal>
@using BrauerNetApp.Models;

@{
    ViewData["Title"] = "Goal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Goals on BrauerNet</h2>
<hr />
@if (Model.Count > 0)
{
    @foreach (var goal in Model)
    {
        <div class="row">
            <div class="col-md-4">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3>@Html.DisplayFor(modelItem => goal.Description)</h3>

                    </div>
                    <div class="panel-body">
                        <ul>
                            <li>@Html.ActionLink("Edit Goal", "Edit", new { id = goal.GoalId })</li>
                            <li>@Html.ActionLink("Delete Goal", "Delete", new { id = goal.GoalId })</li>
                            <li>@Html.ActionLink("Goal Details", "Details", new { id = goal.GoalId })</li>
                        </ul>

                    </div>
                </div>
            </div>
        </div>
    }
}

<h2>
    @Html.ActionLink("Create Project", "Create", "Projects")
</h2>
<h2>
    @Html.ActionLink("Create Goal", "Create", "Goals")
</h2>
<h2>
    @Html.ActionLink("Create Participant", "Create", "Participants")
</h2>
<h2>
    @Html.ActionLink("Create Stakeholder", "Create", "Stakeholders")
</h2>
<h2>
    @Html.ActionLink("Create Standard", "Create", "Standards")
</h2>


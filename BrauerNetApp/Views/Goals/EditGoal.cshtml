@model BrauerNetApp.Models.Goal

@{
    ViewData["Title"] = "Goal - Display";
}

@using (Html.BeginForm("EditGoal", "Goals"))
{
    @Html.HiddenFor(x => Model.GoalId)
    @Html.HiddenFor(x => Model.QUESTORId)

    
    @Html.EditorFor(x => Model.Description)

    <input type="submit" value="Save" class="btn btn-success" />

    @Html.ActionLink("Delete", "DeleteGoal", "Goals", new { id = Model.GoalId })
}
@model BrauerNetApp.Models.Step

@{
    ViewData["Title"] = "Step - Create";
}

@using (Html.BeginForm("CreateStep", "Steps"))
{
    <h5>Add a Step</h5>
    @Html.LabelFor(model => model.Description)
    @Html.EditorFor(model => model.Description)

    @Html.HiddenFor(module => Model.ProjectId)
    @Html.HiddenFor(module => Model.StepId)

    <input type="submit" value="Create" class="btn btn-success" />
}

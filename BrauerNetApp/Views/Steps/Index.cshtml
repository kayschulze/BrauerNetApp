@model List<BrauerNetApp.Models.Step>
@using BrauerNetApp.Models;

@{
    ViewData["Title"] = "Project";
}

<h2>Steps</h2>
<hr />
@if (Model.Count > 0)
{
    @foreach (var step in Model)
    {
        <div class="row">
            <div class="col-md-4">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3>@Html.DisplayFor(modelItem => step.Description)</h3>

                    </div>
                    <div class="panel-body">
                        <ul>
                            <li>@Html.ActionLink("Edit Project", "Edit", new { id = step.ProjectId })</li>
                            <li>@Html.ActionLink("Delete Project", "Delete", new { id = step.ProjectId })</li>
                            <li>@Html.ActionLink("Project Details", "Details", new { id = step.ProjectId })</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
}

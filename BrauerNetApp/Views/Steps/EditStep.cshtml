@model BrauerNetApp.Models.Step

@{
    ViewData["Title"] = "Step";
}

@if (User.Identity.IsAuthenticated)
{
    @using (Html.BeginForm("EditStep", "Steps"))
    {
        @Html.HiddenFor(model => model.ProjectId)
        @Html.HiddenFor(model => model.StepId)

        @Html.EditorFor(model => model.Description)

        <input type="submit" value="Save" class="btn btn-success" />

        @Html.ActionLink("Delete", "DeleteStep", "Steps", new { id = Model.StepId })
    }
}
else
{
    <h2>Please sign-in to gain access to this function.</h2>
}
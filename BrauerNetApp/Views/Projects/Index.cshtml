@model List<BrauerNetApp.Models.Project>
@using BrauerNetApp.Models;

@{
    ViewData["Title"] = "Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Projects on BrauerNet</h2>
<hr />
<div class="row">
    @if (Model.Count > 0)
    {
        @foreach (var project in Model)
        {
            <div class="col-md-4">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3>@Html.DisplayFor(modelItem => project.Name)</h3>

                    </div>
                    <div class="panel-body">
                        <ul>
                            <li>@Html.ActionLink("Edit Project", "Edit", new { id = project.ProjectId })</li>
                            <li>@Html.ActionLink("Delete Project", "Delete", new { id = project.ProjectId })</li>
                            <li>@Html.ActionLink("Project Details", "Details", new { id = project.ProjectId })</li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    }
</div>

<h2>
    @Html.ActionLink("Create Project", "Create", "Projects")
</h2>
<h2>
    @Html.ActionLink("Create Participant", "Register", "Account")
</h2>
<h2>
    @Html.ActionLink("Create Stakeholder", "Create", "Stakeholders")
</h2>
<h2>
    @Html.ActionLink("Create Standard", "Create", "Standards")
</h2>


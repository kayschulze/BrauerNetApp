@model BrauerNetApp.Models.Response

@{
    ViewData["Title"] = "Response";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.Identity.IsAuthenticated)
{
    @using (Html.BeginForm("EditResponse", "Responses"))
    {
        @Html.HiddenFor(model => model.ProjectId)
        @Html.HiddenFor(model => model.ResponseId)

        @Html.EditorFor(model => model.Description)

        <input type="submit" value="Save" class="btn btn-success" />

        @Html.ActionLink("Delete", "DeleteResponse", "Responses", new { id = Model.ResponseId })
    }
}
else
{
    <h2>Please sign-in to gain access to this function.</h2>
}
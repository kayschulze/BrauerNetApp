@model BrauerNetApp.Models.Standard

@{
    ViewData["Title"] = "Standard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Standard @Html.DisplayFor(model => model.Type), 
    @Html.DisplayFor(model => model.Identifier) on BrauerNet</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.StandardId)

    @Html.LabelFor(model => model.Type)
    @Html.EditorFor(model => model.Type)

    @Html.LabelFor(model => model.Identifier)
    @Html.EditorFor(model => model.Identifier)

    @Html.LabelFor(model => model.Description)
    @Html.EditorFor(model => model.Description)

    <input type="submit" value="Save" class="btn btn-success" />
}
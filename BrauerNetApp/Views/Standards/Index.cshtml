@model List<BrauerNetApp.Models.Standard>

@{
    ViewData["Title"] = "Standard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Standards on BrauerNet</h2>
<hr />
<div class="row">
    @if (Model.Count > 0)
    {
        @foreach (var standard in Model)
        {
            <div class="col-md-4 standard">
                <div class="panel standard">
                    <div class="panel-heading">
                        <h3>@Html.DisplayFor(modelItem => standard.Type)
                        @Html.DisplayFor(modelItem => standard.Identifier)</h3>
                        <h3>@Html.DisplayFor(modelItem => standard.Description)</h3>
                    </div>
                    <div class="panel-body">
                        <ul>
                            <li>@Html.ActionLink("Edit Standard", "EditStandard", new { id = standard.StandardId })</li>
                            <li>@Html.ActionLink("Delete Standard", "DeleteStandard", new { id = standard.StandardId })</li>
                            <li>@Html.ActionLink("Standard Details", "DetailsStandard", new { id = standard.StandardId })</li>
                        </ul>

                    </div>
                </div>
            </div>
        }
    }
</div>
